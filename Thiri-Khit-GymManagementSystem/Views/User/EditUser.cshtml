@model UserDataModel;

@{
    ViewData["Title"] = "Edit User";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <a href="/User/UserManagement" class="btn btn-outline-dark mb-3">Back</a>
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Edit User</h3>
                </div>
                <div class="card-body">
                    @if (Model is not null)
                    {
                        <form method="post" action="/User/Update">
                            <input type="hidden" value="@Model.UserId" name="UserId" />
                            <label>User Name: </label>
                            <input type="text" name="UserName" required class="form-control" value="@Model.UserName" />
                            <br />
                            <label>Email: </label>
                            <input type="text" name="Email" required class="form-control" value="@Model.Email" />
                            <br />
                            <button type="submit" class="btn btn-outline-primary">Update</button>
                        </form>
                    }
                    else
                    {
                        <h3>No data found.</h3>
                    }
                </div>
            </div>
        </div>
    </div>
</div>