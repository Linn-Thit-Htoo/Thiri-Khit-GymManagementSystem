@model List<MembershipResponseModel>;

@{
    ViewData["Title"] = "Membership Management";
    var success = TempData["success"];
    var error = TempData["error"];
}

<h1>Membership Management</h1>

<a class="btn btn-outline-dark my-3" href="/Membership/CreateMembership">Create Membership</a>

@if (success is not null)
{
    <div class="alert alert-success" role="alert">
        @success
    </div>
}

@if (error is not null)
{
    <div class="alert alert-danger" role="alert">
        @error
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Plan Name</th>
            <th>Price</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UserName</td>
                <td>@item.PlanName</td>
                <td>@item.Price</td>
                <td>@item.StartDate</td>
                <td>@item.EndDate</td>
                <td>
                    <a class="btn btn-outline-success">Edit</a>
                    <button class="btn btn-outline-danger" onclick="btnDelete('@item.MembershipId')">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <script>
        function btnDelete(id) {
            if (id == null || id == "")
                return;

            if (window.confirm("Are you sure you want to delete?")) {
                window.location.href = `/Membership/DeleteMembership/${id}`;
            }
        }
    </script>
}