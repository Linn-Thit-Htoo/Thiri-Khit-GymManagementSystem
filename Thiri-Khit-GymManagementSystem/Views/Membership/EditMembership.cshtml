@model EditMembershipResponseModel;

@{
    ViewData["Title"] = "Edit Membership";
}


<h1>Edit Membership</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Edit Membership</h3>
                </div>
                <div class="card-body">
                    <form action="/Membership/Update" method="post">
                        <input type="hidden" name="MembershipId" value="@Model.Membership.MembershipId" />
                        <label>Membership Plan: </label>
                        <select class="form-control" required name="MembershipPlanId">
                            <option value="" selected>Choose plan...</option>
                            @foreach (var plan in Model.Plans)
                            {
                                if (plan.MembershipPlanId == Model.Membership.MembershipPlanId)
                                {
                                    <option value="@plan.MembershipPlanId" selected>@plan.PlanName</option>
                                }
                                else
                                {
                                    <option value="@plan.MembershipPlanId">@plan.PlanName</option>
                                }
                            }
                        </select>
                        <br />
                        <label>Choose Member: </label>
                        <select class="form-control" required name="UserId">
                            <option value="" selected>Choose member...</option>
                            @foreach (var user in Model.Users)
                            {
                                if (user.UserId == Model.Membership.UserId)
                                {
                                    <option value="@user.UserId" selected>@user.UserName</option>
                                }
                                else
                                {
                                    <option value="@user.UserId">@user.UserName</option>
                                }
                            }
                        </select>
                        <br />
                        <label>Start Date: </label>
                        <input type="date" class="form-control" name="StartDate" required value="@Model.Membership.StartDate" />
                        <br />
                        <label>End Date: </label>
                        <input type="date" class="form-control" name="EndDate" required value="@Model.Membership.EndDate" />
                        <br />
                        <button class="btn btn-outline-primary" type="submit">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>